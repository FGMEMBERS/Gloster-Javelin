<?xml version="1.0" encoding="UTF-8"?>

<PropertyList> 

  <path>air-temp.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>visses</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
      <red>   0.75 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>environment/temperature-degc</property>
    <interpolation> 
      <entry><ind> -70 </ind><dep> -42.5 </dep></entry>
      <entry><ind> -60 </ind><dep> -33.0 </dep></entry>
      <entry><ind> -40 </ind><dep> -17.0 </dep></entry>
      <entry><ind> -30 </ind><dep> -12.0 </dep></entry>
      <entry><ind> -20 </ind><dep>   2.0 </dep></entry>
      <entry><ind> -10 </ind><dep>  10.0 </dep></entry>
      <entry><ind>   0 </ind><dep>  20.0 </dep></entry>
      <entry><ind>  10 </ind><dep>  28.0 </dep></entry>
      <entry><ind>  20 </ind><dep>  37.0 </dep></entry>
      <entry><ind>  30 </ind><dep>  43.0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.002 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.010 </z-m>
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- *** LoD *** -->
  <animation> 
    <type>range</type>
    <min-m>0</min-m>
    <max-m>5</max-m>
  </animation>

</PropertyList>

